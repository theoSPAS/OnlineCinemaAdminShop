@model List<OnlineCinemaAdminApplication.Models.Order>

    <div class="container">

        

        <div class="row">
            @using (Html.BeginForm("ExportOrders", "Order"))
            {
                <input type="text" name="genre" />
                <input type="submit" value="send" />
                 <a class="btn btn-outline-success" asp-controller="Order" asp-action="ExportOrders">Export Orders</a>
            }
        </div>

        <table class="table mt-5">
            <thead class="thead-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Costumer Details</th>
                    <th scope="col">No. of Tickets</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var ticket = Model[i];

                    <tr>
                        <th scope="row">@(i+1)</th>
                        <td>@ticket.User.Email</td>
                        <td>@ticket.TicketInOrders.Count()</td>
                        <td><a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@ticket.Id">Details</a></td>
                        <td><a class="btn btn-outline-warning" asp-action="Invoice" asp-route-id="@ticket.Id">Invoice</a></td>
                    </tr>

                }
            </tbody>


        </table>

    </div>